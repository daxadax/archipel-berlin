source 'http://www.rubygems.org'

# usual suspects
gem 'rake'
gem 'sinatra'
gem 'sinatra-contrib'
gem 'haml'
gem 'dotenv'

# database
gem 'sequel'
gem 'pg'

# user authentication
gem 'bcrypt'

# generate pdfs
gem 'prawn'

# generate zip archives
gem 'rubyzip'

# http requests
