#dashboard.container.mt-5

  %ul#main-nav.nav.nav-justified.p-3.mb-3
    %li.nav-item.p-3.active.btn-default{data: 'archipel-orders'}
      Archipel Orders
    %li.nav-item.p-3{data: 'apocalypse-delivery-requests'}
      Apocalypse Delivery Requests

  %section#archipel-orders.well.bs-component
    = display_partial('admin/orders_table')

  %section#apocalypse-delivery-requests.well.bs-component.hidden
    %table.table.table-dark.table-striped
      %thead
        %tr
          -# %th Acknowledged?
          %th Type
          %th Customer Name
          %th Total weight
          %th Total deliveries
          %th Created at
          %th Actions
      %tbody
        - @delivery_requests.each do |delivery_request|
          %tr.align-items-center
            -# %td.text-center
              .fas{class: "#{delivery_request.acknowledged? ? 'fa-check' : 'fa-times'}"}
            %td= delivery_request.dropoff? ? 'dropoff' : 'pickup'
            %td= delivery_request.invoice_business_name
            %td= "#{delivery_request.total_weight_in_kg}kg"
            %td= delivery_request.delivery_locations.count
            %td.small= delivery_request.created_at
            %td.actions
              .icon.fas.fa-info{title: 'Show details', onclick: "toggleDeliveryRequest(this)"}
          %tr.delivery-request-details.hidden
            %td{colspan: '100%'}
              %h3.upcase.mt-3 pickup details
              .pickup-details.pl-5
                %p
                  .font-weight-bold business name:
                  = delivery_request.pickup_business_name
                %p
                  .font-weight-bold pickup address:
                  = "#{delivery_request.pickup_address} #{delivery_request.pickup_zip} Berlin"
                %p
                  .font-weight-bold contact:
                  = "#{delivery_request.pickup_contact_name} / #{delivery_request.pickup_contact_phone}"

              %hr
              %h3.upcase invoice details
              .invoice-details.pl-5
                %p
                  .font-weight-bold business name:
                  = delivery_request.invoice_business_name
                %p
                  .font-weight-bold invoice address:
                  = "#{delivery_request.invoice_address} #{delivery_request.invoice_zip} #{delivery_request.invoice_city}"
                %p
                  .font-weight-bold contact:
                  = "#{delivery_request.invoice_contact_name} / #{delivery_request.invoice_contact_email}"

              %hr
              %h3.upcase deliveries
              %ol.pl-5
                - delivery_request.delivery_locations.each do |delivery_location|
                  %li= delivery_location.map(&:last).join(' ');
